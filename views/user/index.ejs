<% include ../partials/head.ejs %>
  <body>
    <% include ../partials/header.ejs %>
    <main>
      <div class="container">
        <h3 class="white-text">Hello, <%= user.firstName %>!</h3>

      </div>
      <div class="container">
      <div class="carousel carousel-slider center black" data-indicators="false">

        <% places.map(function(place) { %>
          <div class="carousel-item white-text">

            <h1><%= place[0] %></h1>
            <h4><%= place[1] %></h4>
            <% if(place[2] === true) { %>
                <p>Open Now</p>
                <% } else { %>
                  <p>Closed Now</p>
                  <% } %>
                <% if(place[3] === 1) { %>
                <p>$</p>
                <% } else if(place[3] === 2) { %>
                  <p>$$</p>
                  <% } else if(place[3] === 3) { %>
                    <p>$$$</p>
                    <% } else if(place[3] === 4) { %>
                      <p>$$$$</p>
                    <% } else { %>
                      <p>No Price Info</p>
                      <% } %>
                    <% if(place[4] < 2) { %>
                      <h6>&#9734;</h6>
                    <% } else if(place[4] < 3) { %>
                      <h6>&#9734;&#9734;/h6>
                    <% } else if(place[4] < 4) { %>
                      <h6>&#9734;&#9734;&#9734;</h6>
                    <% } else if(place[4] < 5) { %>
                      <h6>&#9734;&#9734;&#9734;&#9734;</h6>
                      <% }else if(place[4] === 5) { %>
                      <h6>&#9734;&#9734;&#9734;&#9734;&#9734;</h6>
                      <% } %>
                      <form action="/user" method="POST">
                        <input type="hidden" name="user_id" value="<%= user.id %>"/>
                        <input type="hidden" name="bar_name" value="<%= place[0] %>"/>
                        <input type="hidden" name="bar_address" value="<%= place[1] %>"/>
                        <input type="submit" class="black" value="Add to faves?" />
                      </form>
                </div>
              <% }) %>

          </div>
        </div>

        <div class="container">
        <div id="map"></div>

        <script>

           function initMap() {
            var userLocation = {lat: 40.7410986, lng: -73.9888682};
            var map = new google.maps.Map(document.getElementById('map'), {
              zoom: 16,
